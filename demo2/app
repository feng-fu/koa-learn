var koa = require('koa')
var app = koa()
var router = require('koa-router')

app.use(router(app))

var config = require('./config/config')
app.use(function *(next){
  if(!this.config){
    this.config = config
  }

  yield next
})

app.get('/config',function *(){

  var config = this.config
  this.body = config.env
})

app.listen(3000)
